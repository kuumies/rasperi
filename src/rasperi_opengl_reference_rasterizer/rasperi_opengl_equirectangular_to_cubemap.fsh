   OpenGL equirectangular to cubemap fragment shader.
 * ---------------------------------------------------------------- */
 
#version 330 core

/* ---------------------------------------------------------------- *
 * ---------------------------------------------------------------- */
uniform sampler2D map;

/* ---------------------------------------------------------------- *
 * ---------------------------------------------------------------- */
in vec3 texCoord;

/* ---------------------------------------------------------------- *
* ---------------------------------------------------------------- */
out vec4 outColor;

/* ---------------------------------------------------------------- *
 * ---------------------------------------------------------------- */
void main()
{
    vec2 invAtan = vec2(0.1591, 0.3183);
    vec3 n  = normalize(texCoord);
    vec2 uv = vec2(atan(n.z, n.x), asin(n.y));
    uv *= invAtan;
    uv += 0.5;
    uv.y = 1.0 - uv.y;

    vec3 c = texture(map, uv).rgb;
    outColor = vec4(c, 1.0);
}
